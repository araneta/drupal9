<div class="banner">
	<h1>{{title}}</h1>
	
	<form action="/search" method="GET"> 
	  <div class="row">
		<div class="col-xs-6 col-md-4">
		  <div class="input-group">
			<input type="text" class="form-control" placeholder="Search" id="txtSearch"/>
			<div class="input-group-btn">
			  <button class="btn btn-primary" type="submit">
				<span class="glyphicon glyphicon-search"></span>
			  </button>
			</div>
		  </div>
		</div>
	  </div>
	</form>
	<h2>{{subtitle}}</h2>
</div>
<div class="event-news-wrapper">
	<div class="row">
	
		{% if events %}
		  <div class="event-list col-md-8"> 
			<h3>Event</h3>
			<div class="row">
				{% for item in events %}
				  <div class="col-md-4">
					<div class="event-box">
						<div class="event-img">
							<img src="{{item.img}}" class="img-responsive">
						</div>
						<div>{{ item.date | raw}}</div>
						<div>{{ item.desc | raw}}</div>
					</div>	
				  </div>
				{% endfor %}
			</div>	
		  </div>
		{% endif %}
		
		<div class="col-md-4">
			<h3>News</h3>
		</div>
	</div>
</div>
